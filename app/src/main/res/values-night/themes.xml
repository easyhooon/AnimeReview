<resources>
    <!-- Base application theme. -->
    <style name="Theme.AnimeReview" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/anime_purple</item>
        <item name="colorPrimaryVariant">@color/anime_gradient_purple</item>
        <item name="colorOnPrimary">@color/anime_black_01</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/anime_pink_01</item>
        <item name="colorSecondaryVariant">@color/anime_pink_02</item>
        <item name="colorOnSecondary">@color/anime_black_01</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="appBarLayoutStyle">@style/AppbarStyle</item>
    </style>

    <style name="AppbarStyle" parent="Widget.Design.AppBarLayout">
        <item name="android:background">@color/anime_white</item>
    </style>
</resources>